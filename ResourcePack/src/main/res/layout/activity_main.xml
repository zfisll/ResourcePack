<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stringRes"
                style="@style/style1"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/my_shape_1"
                android:layout_marginBottom="12dp"/>
            <GridView
                android:id="@+id/color_block"
                android:layout_width="wrap_content"
                android:layout_height="220dp"
                android:horizontalSpacing="@dimen/spacing"
                android:verticalSpacing="@dimen/spacing"
                android:gravity="center"
                android:numColumns="3"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="12dp"/>
            <ImageView
                android:id="@+id/image"
                android:layout_width="fill_parent"
                android:layout_height="175dp"
                android:background="@drawable/my_clip"/>
            <ListView
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:textSize="@dimen/content_font_size"
                android:textColor="@color/gray"
                android:entries="@array/contact"/>
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/content_font_size"
                android:textColor="@drawable/edit_font_color"/>
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/content_font_size"
                android:textColor="@drawable/edit_font_color"/>
            <SeekBar
                android:id="@+id/bar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progressDrawable="@drawable/my_bar"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
