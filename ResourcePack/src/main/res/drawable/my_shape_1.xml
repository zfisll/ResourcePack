<?xml version="1.0" encoding="utf-8"?>
<!--定义ShapeDrawable资源，定义一个几何形状，可用作背景-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!--设置四个角的弧度-->
    <corners
        android:radius="5dp"/>
    <!--设置内填充颜色-->
    <solid android:color="#ffffff"/>
    <!--设置边框-->
    <stroke
        android:width="1px"
        android:color="@color/purple"/>
    <!--设置内边距-->
    <padding
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp"/>
</shape>